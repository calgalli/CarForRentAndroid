        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="PHUKET RENT" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectForRent" />
        <activity android:name=".CarRent"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".BoatRent"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".BoatTranfer"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Register" />
        <activity android:name=".registerActivity" />
        <activity
            android:name=".profileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".selectCarActivity"
            android:label="@string/title_activity_select_car" >
        </activity>
        <activity
            android:name=".selectCarCompanyActivity"
            android:label="@string/title_activity_select_car_company" >
        </activity>
        <activity
            android:name=".selectDestinationActivity"
            android:label="@string/title_activity_select_destination" >
        </activity>
        <activity
            android:name=".selectXferCompanyActivity"
            android:label="@string/title_activity_select_xfer_company" >
        </activity>
        <activity
            android:name=".selectBoatActivity"
            android:label="@string/title_activity_select_boat" >
        </activity>
        <activity
            android:name=".selectBoatCompanyActivity"
            android:label="@string/title_activity_select_boat_company" >
        </activity>
    </application>

</manifest>
